<h1>Message Inbox</h1>

<table>
    <thead>
        <tr>
            <th>Messages</th>
            <th>Date Time</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    <% @messages.each do |msg| %>
        <tr>
            <td><%= msg.message   %></td>
            <td><%= msg.created_at %></td>
            <td><%= link_to 'Show', message_path(msg) %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<p>
  <%= link_to 'Create New Message', new_message_path %>
</p>

